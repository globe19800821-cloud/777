,"        if avg_rtp < 0.3:\n","            return \"ğŸ”´ å’¬åˆ†æœŸ (High Risk)\", avg_rtp\n","        elif avg_rtp > 1.2:\n","            return \"ğŸŸ¢ çˆ†åˆ†æœŸ (Payout!)\", avg_rtp\n","        else:\n","            return \"ğŸŸ¡ éæ¸¡æœŸ (Stable)\", avg_rtp\n","\n","    def run_simulation(self, total_spins=100, bet=1.0):\n","        balance = 0\n","        status_counts = defaultdict(int)\n","\n","        print(f\"{'æ¬¡æ•¸':<5} | {'çµæœ':<15} | {'æ´¾å½©':<6} | {'ç•¶å‰ç‹€æ…‹':<15} | {'å€æ®µRTP'}\")\n","        print(\"-\" * 70)\n","\n","        for i in range(1, total_spins + 1):\n","            # æ¨¡æ“¬æ—‹è½‰\n","            res = tuple(random.choices(self.symbols, weights=self.weights, k=3))\n","\n","            # è¨ˆç®—æ´¾å½©\n","            counts = Counter(res)\n","            most_common_sym, cnt = counts.most_common(1)[0]\n","            payout = 0\n","            if cnt == 3:\n","                payout = bet * PAYTABLE_3.get(most_common_sym, 0)\n","            elif cnt == 2:\n","                payout = bet * PAYTABLE_2.get(most_common_sym, 0)\n","\n","            balance += (payout - bet)\n","\n","            # ç‹€æ…‹åˆ¤æ–·\n","            status, window_rtp = self.analyze_status(payout, bet)\n","            status_counts[status] += 1\n","\n","            # åƒ…åˆ—å°å‰ 50 æ¬¡è§€å¯Ÿè®ŠåŒ–\n","            if i <= 50:\n","                print(f\"{i:<7} | {str(res):<15} | {payout:<8.1f} | {status:<15} | {window_rtp:>7.1%}\")\n","\n","        print(\"-\" * 70)\n","        print(f\"ç¸½çµå ±å‘Š (æ¸¬è©¦ {total_spins} æ¬¡):\")\n","        for s, count in status_counts.items():\n","            print(f\" - {s}: å‡ºç¾ {count} æ¬¡ (ä½”æ¯” {count/total_spins:>7.1%})\")\n","        print(f\"æœ€çµ‚ç›ˆè™§: {balance:.1f} å…ƒ\")\n","\n","# åŸ·è¡Œåˆ†æ\n","analyzer = SlotAnalyzer()\n","analyzer.run_simulation(total_spins=200, bet=10)"]},{"cell_type":"markdown","source":[],"metadata":{"id":"9u7ngSH-7sS6"}},{"cell_type":"code","source":[],"metadata":{"id":"5_fItY_v7u1s"},"execut